[copy]
    # Project configuration files
    include = .claude/settings.local.json

    # TODO files
    include = todo.md
    include = **.todo.md

    # Exclude sensitive files
    exclude = **/.env
    exclude = **/*.xcuserstate

    # Exclude build artifacts and caches
    excludeDirs = .build
    excludeDirs = DerivedData
    excludeDirs = .swiftpm
    excludeDirs = Pods
    excludeDirs = xcuserdata

[hooks]
    postCreate = mise install
    postCreate = nohup swift package resolve > /dev/null 2>&1 &

[defaults]
    editor = cursor
    ai = claude

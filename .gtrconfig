[copy]
    # Project configuration files
    include = .claude/**

    # Exclude sensitive files
    exclude = **/.env
    exclude = **/*.xcuserstate

    # Exclude build artifacts and caches
    excludeDirs = .build
    excludeDirs = DerivedData
    excludeDirs = .swiftpm
    excludeDirs = Pods
    excludeDirs = xcuserdata

[hooks]
    postCreate = mise install
    postCreate = nohup swift package resolve &

[defaults]
    editor = cursor
    ai = claude
